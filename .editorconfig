# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 100

[*.{js,jsx,ts,tsx,json}]
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{sh,bash}]
indent_size = 4

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.rs]
indent_size = 4
max_line_length = 100

[*.sql]
indent_size = 2

[*.{html,css,scss,sass}]
indent_size = 2

[*.{dockerfile,Dockerfile}]
indent_size = 4

[{package.json,tsconfig.json,*.prettierrc,*.eslintrc}]
indent_size = 2

[*.toml]
indent_size = 2

[*.ini]
indent_size = 4

[*.{cmd,bat}]
end_of_line = crlf