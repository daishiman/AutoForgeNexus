{
  "name": "@autoforge/frontend",
  "version": "1.0.0",
  "description": "AutoForgeNexus Frontend - React 19 + Next.js 15.5 with TDD",
  "private": true,
  "engines": {
    "node": ">=20.18.0",
    "pnpm": ">=9.1.0"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ui": "jest --selectProjects ui",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next dist coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "next": "^15.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@clerk/nextjs": "^5.7.0",
    "@tanstack/react-query": "^5.56.0",
    "@tanstack/react-query-devtools": "^5.56.0",
    "zustand": "^5.0.0",
    "zod": "^3.23.0",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@headlessui/react": "^2.1.0",
    "@heroicons/react": "^2.1.0",
    "framer-motion": "^11.11.0",
    "react-hook-form": "^7.53.0",
    "@hookform/resolvers": "^3.9.0",
    "date-fns": "^4.1.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.5.0",
    "lucide-react": "^0.453.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "react-hotkeys-hook": "^4.5.1",
    "use-debounce": "^10.0.0",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript": "^5.6.0",
    "eslint": "^9.12.0",
    "eslint-config-next": "^15.5.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "cross-env": "^7.0.3",
    "@next/bundle-analyzer": "^15.5.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/user-event": "^14.5.0",
    "jest-junit": "^16.0.0",
    "@playwright/test": "^1.48.0",
    "@storybook/react": "^8.3.0",
    "@storybook/nextjs": "^8.3.0",
    "@storybook/addon-essentials": "^8.3.0",
    "msw": "^2.4.0",
    "identity-obj-proxy": "^3.0.0",
    "@faker-js/faker": "^9.0.0",
    "chromatic": "^11.12.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "testMatch": ["<rootDir>/src/**/__tests__/**/*.test.{ts,tsx}"],
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
        "moduleNameMapping": {
          "^@/(.*)$": "<rootDir>/src/$1",
          "^@/components/(.*)$": "<rootDir>/src/components/$1",
          "^@/hooks/(.*)$": "<rootDir>/src/hooks/$1",
          "^@/stores/(.*)$": "<rootDir>/src/stores/$1",
          "^@/utils/(.*)$": "<rootDir>/src/utils/$1",
          "^@/types/(.*)$": "<rootDir>/src/types/$1",
          "\\.(css|less|scss)$": "identity-obj-proxy"
        },
        "collectCoverageFrom": [
          "src/**/*.{ts,tsx}",
          "!src/**/*.d.ts",
          "!src/**/*.stories.{ts,tsx}",
          "!src/**/__tests__/**/*",
          "!src/**/test-utils/**/*"
        ],
        "coverageThreshold": {
          "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
          }
        }
      },
      {
        "displayName": "integration",
        "testMatch": ["<rootDir>/src/**/__tests__/**/*.integration.test.{ts,tsx}"],
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": ["<rootDir>/jest.setup.js", "<rootDir>/jest.integration.setup.js"]
      }
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{ts,tsx}",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": ["text", "lcov", "html", "json-summary"],
    "coverageDirectory": "coverage"
  }
}