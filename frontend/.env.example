# AutoForgeNexus Frontend - Environment Variables Template
# devops-coordinator による環境変数設定

# =============================================================================
# アプリケーション基本設定
# =============================================================================
NEXT_PUBLIC_APP_NAME=AutoForgeNexus
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="AI プロンプト最適化システム"
NODE_ENV=development

# =============================================================================
# ドメイン・URL設定
# =============================================================================
# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# フロントエンドURL
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cloudflare Pages URL (本番環境)
NEXT_PUBLIC_PAGES_URL=https://autoforgenexus.pages.dev

# =============================================================================
# 認証設定 (Clerk)
# =============================================================================
# Clerk 公開キー
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_placeholder

# Clerk シークレットキー (サーバーサイドのみ)
CLERK_SECRET_KEY=sk_test_placeholder

# Clerk エンドポイント設定
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# OAuth プロバイダー設定
NEXT_PUBLIC_CLERK_OAUTH_GOOGLE=true
NEXT_PUBLIC_CLERK_OAUTH_GITHUB=true
NEXT_PUBLIC_CLERK_OAUTH_DISCORD=false

# 組織機能設定
NEXT_PUBLIC_CLERK_ORGANIZATIONS=true
NEXT_PUBLIC_CLERK_ORGANIZATION_PROFILE_URL=/organization

# =============================================================================
# データベース設定
# =============================================================================
# Turso Database (libSQL)
DATABASE_URL=libsql://your-database-name.turso.io
DATABASE_AUTH_TOKEN=your-database-auth-token

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# AI/ML サービス設定
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
NEXT_PUBLIC_OPENAI_MODEL=gpt-4

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
NEXT_PUBLIC_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini
GOOGLE_API_KEY=your-google-api-key
NEXT_PUBLIC_GEMINI_MODEL=gemini-pro

# =============================================================================
# LangFuse 監視設定
# =============================================================================
LANGFUSE_PUBLIC_KEY=pk_lf_your-public-key
LANGFUSE_SECRET_KEY=sk_lf_your-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com
NEXT_PUBLIC_LANGFUSE_ENABLED=true

# =============================================================================
# Cloudflare 設定
# =============================================================================
# Cloudflare API
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Cloudflare Images
NEXT_PUBLIC_CLOUDFLARE_IMAGES_ENABLED=true
CLOUDFLARE_IMAGES_API_TOKEN=your-cloudflare-images-token
NEXT_PUBLIC_CLOUDFLARE_IMAGES_HASH=your-account-hash

# Cloudflare KV
CLOUDFLARE_KV_NAMESPACE_ID=your-kv-namespace-id

# Cloudflare R2
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET=autoforgenexus-assets

# =============================================================================
# セキュリティ設定
# =============================================================================
# JWT設定
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION=24h

# 暗号化キー
ENCRYPTION_KEY=your-encryption-key-32-chars-long
ENCRYPTION_ALGORITHM=aes-256-gcm

# セッション設定
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600

# CORS設定
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# CSP (Content Security Policy)
CSP_ENABLED=true
CSP_REPORT_URI=/api/security/csp-report

# =============================================================================
# アナリティクス・監視設定
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_ENABLED=false

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ENABLED=false

# Sentry エラー追跡
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=autoforgenexus-frontend

# Web Vitals 監視
NEXT_PUBLIC_WEB_VITALS_ENABLED=true
NEXT_PUBLIC_WEB_VITALS_ENDPOINT=/api/analytics/web-vitals

# =============================================================================
# パフォーマンス設定
# =============================================================================
# キャッシュ設定
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000
API_CACHE_TTL=300

# 画像最適化
NEXT_PUBLIC_IMAGES_OPTIMIZATION=true
NEXT_PUBLIC_IMAGES_QUALITY=75
NEXT_PUBLIC_IMAGES_FORMATS=webp,avif

# =============================================================================
# 機能フラグ
# =============================================================================
# 新機能フラグ
NEXT_PUBLIC_FEATURE_NEW_UI=false
NEXT_PUBLIC_FEATURE_ADVANCED_EDITOR=true
NEXT_PUBLIC_FEATURE_AI_SUGGESTIONS=true
NEXT_PUBLIC_FEATURE_COLLABORATION=false

# 実験的機能
NEXT_PUBLIC_EXPERIMENTAL_PPR=false
NEXT_PUBLIC_EXPERIMENTAL_TURBOPACK=true
NEXT_PUBLIC_EXPERIMENTAL_REACT_COMPILER=false

# A/B テスト
NEXT_PUBLIC_AB_TEST_ENABLED=false
NEXT_PUBLIC_AB_TEST_VARIANT=control

# =============================================================================
# 開発・デバッグ設定
# =============================================================================
# Next.js デバッグ
DEBUG=false
NEXT_DEBUG=false
NEXT_TELEMETRY_DISABLED=1

# ビルド設定
ANALYZE=false
BUILD_STATIC=true
GENERATE_SOURCEMAP=false

# ログ設定
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# サードパーティサービス
# =============================================================================
# Stripe (決済)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret

# SendGrid (メール)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@autoforgenexus.com

# Intercom (カスタマーサポート)
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id

# =============================================================================
# 本番環境固有設定
# =============================================================================
# 本番ドメイン
PRODUCTION_DOMAIN=autoforgenexus.com
PRODUCTION_API_URL=https://api.autoforgenexus.com

# SSL/TLS設定
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# セキュリティ強化
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# ステージング環境設定
# =============================================================================
STAGING_DOMAIN=staging.autoforgenexus.com
STAGING_API_URL=https://api-staging.autoforgenexus.com

# =============================================================================
# 開発環境設定
# =============================================================================
DEVELOPMENT_API_URL=http://localhost:8000
DEVELOPMENT_MOCK_DATA=true
DEVELOPMENT_HOT_RELOAD=true

# =============================================================================
# CI/CD設定
# =============================================================================
CI=false
GITHUB_TOKEN=your-github-token
DEPLOY_HOOK=your-deploy-hook-url

# テスト設定
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSERS=chromium,firefox,webkit
TEST_TIMEOUT=30000

# =============================================================================
# メンテナンス設定
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress"
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# =============================================================================
# バックアップ・復旧設定
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# =============================================================================
# 地域・国際化設定
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=ja
NEXT_PUBLIC_SUPPORTED_LOCALES=ja,en
NEXT_PUBLIC_TIMEZONE=Asia/Tokyo

# =============================================================================
# パフォーマンス予算設定
# =============================================================================
PERFORMANCE_BUDGET_JS=250000
PERFORMANCE_BUDGET_CSS=50000
PERFORMANCE_BUDGET_IMAGES=500000
PERFORMANCE_BUDGET_FONTS=100000