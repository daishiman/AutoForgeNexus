# AutoForgeNexus 環境変数テンプレート
# このファイルを.envにコピーして、実際の値を設定してください

# === 基本設定 ===
NODE_ENV=development
PYTHON_ENV=development
LOG_LEVEL=debug

# === データベース ===
# Turso
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === 認証 (Clerk) ===
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# === LLMプロバイダー ===
# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Google
GOOGLE_API_KEY=

# LiteLLM
LITELLM_MASTER_KEY=
LITELLM_PROXY_BASE_URL=http://localhost:4000

# === 観測性 (LangFuse) ===
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# === Cloudflare ===
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_WORKERS_SUBDOMAIN=

# R2 Storage
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=

# === GitHub ===
GITHUB_PERSONAL_ACCESS_TOKEN=
GITHUB_WEBHOOK_SECRET=

# === MCP Servers ===
BRAVE_API_KEY=

# === セキュリティ ===
JWT_SECRET_KEY=
ENCRYPTION_KEY=
SESSION_SECRET=

# === パフォーマンス監視 ===
SENTRY_DSN=
DATADOG_API_KEY=

# === Feature Flags ===
ENABLE_VECTOR_SEARCH=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_COST_OPTIMIZATION=true
ENABLE_ENTERPRISE_SSO=false

# === 開発ツール ===
VITE_PORT=3000
BACKEND_PORT=8000
WEBSOCKET_PORT=3001