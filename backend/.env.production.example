# === Production Environment Configuration ===
# IMPORTANT: Use specific host binding with reverse proxy

# Application Settings
APP_ENV=production
DEBUG=False
# Security: Use 127.0.0.1 with reverse proxy (nginx/Cloudflare)
# Or set specific IP address for internal network
HOST=127.0.0.1  # DO NOT use 0.0.0.0 in production without proper firewall
PORT=8000

# CORS Settings (Restrict to specific domains)
CORS_ALLOW_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Database
DATABASE_URL=<your-turso-database-url>

# Redis
REDIS_HOST=<your-redis-host>
REDIS_PORT=6379
REDIS_PASSWORD=<your-redis-password>

# Authentication
CLERK_PUBLISHABLE_KEY=<your-clerk-publishable-key>
CLERK_SECRET_KEY=<your-clerk-secret-key>
